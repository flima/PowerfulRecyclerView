<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <br.com.flima.powerfulrecyclerview.PowerfulRecyclerView
        android:id="@+id/powerful_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_empty="@layout/layout_empty"
        app:layout_error="@layout/layout_error"
        app:layout_loading="@layout/layout_loading"
        app:swipe_to_refresh_enabled="true" />

</LinearLayout>